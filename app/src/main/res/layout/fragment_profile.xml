<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/ivTeam1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ega"
                    android:contentDescription="Team Image 1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTeamName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghazy Abyu Pandega"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C" />

                    <TextView
                        android:id="@+id/tvStadiumName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#7A7A7A"
                        android:paddingTop="4dp" />
                    <TextView
                        android:id="@+id/tvStadiumName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abyupandega@gmail.com"
                        android:textStyle="italic"
                        android:textSize="16sp"
                        android:textColor="#7A7A7A"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/ivTeam2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fawwaz"
                    android:contentDescription="Team Image 2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTeamName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fawwaz Labib"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C" />

                    <TextView
                        android:id="@+id/tvName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#7A7A7A"
                        android:paddingTop="4dp" />
                    <TextView
                        android:id="@+id/tvName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fawwazlabib29@gmail.com"
                        android:textStyle="italic"
                        android:textSize="16sp"
                        android:textColor="#7A7A7A"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
